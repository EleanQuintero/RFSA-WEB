---
import Hero from "@/components/hero/Hero.astro";
import LegalStuffLayout from "@/layouts/LegalStuffLayout.astro";

import { type CollectionEntry, getCollection, render } from "astro:content";

export const prerender = true;
export async function getStaticPaths() {
  const legal = await getCollection("legal");

  return legal.map((legal) => ({
    params: { id: legal.id },
    props: { legal },
  }));
}

const { legal } = Astro.props;
const { data } = legal;
const { title, description } = data;

const { Content } = await render(legal);
---

<LegalStuffLayout
  title=`${title} | Rehab for Strengh Atlethes`
  description={description}
>
  <Hero className="mt-20" align="center" title={title} />
  <main
    class="flex flex-col items-center justify-center wrapper p-6 lg:gap-x-5"
  >
    <section class="max-w-[80ch] content font-bold text-md prose-slate mb-5">
      <Content />
    </section>
  </main>
</LegalStuffLayout>

<style>
  .content > :global(* + *) {
    margin-top: 1rem;
  }

  .content :global(h1),
  .content :global(h2),
  .content :global(h3),
  .content :global(h4),
  .content :global(h5) {
    margin: 1.5rem 0;
  }

  .content :global(img) {
    border-radius: 1.5rem;
    box-shadow: var(--shadow-sm);
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
  }

  .content :global(blockquote) {
    font-size: var(--text-lg);
    font-family: var(--font-brand);
    font-weight: 600;
    line-height: 1.1;
    padding-inline-start: 1.5rem;
    border-inline-start: 0.25rem solid var(--accent-dark);
    color: var(--gray-0);
  }

  .back-link,
  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }
</style>
