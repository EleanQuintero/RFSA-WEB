---
import { iconsUrl } from "@/lib/constants";

interface Props {
  stepNumber: string; // Cambiamos el tipo a number
}

const { stepNumber } = Astro.props;

// Construimos la clave del paso
const stepKey = `Step${stepNumber}` as keyof typeof iconsUrl;
---

<div class="flex flex-row items-center gap-3 justify-center">
  {
    iconsUrl[stepKey].map((icon: string) => (
      <img src={icon} class="w-12 h-12" alt="" />
    ))
  }
</div>
