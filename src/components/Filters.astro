---
interface Props {
  categories: string[];
  activeCategory: string;
}

const { categories, activeCategory } = Astro.props;
---

<div class="category-filter">
  <button
    class={`filter-btn ${activeCategory === "all" ? "active" : ""}`}
    data-category="all"
  >
    Todos
  </button>
  {
    categories.map((category) => (
      <button
        class={`filter-btn ${activeCategory === category ? "active" : ""}`}
        data-category={category}
      >
        {category}
      </button>
    ))
  }
</div>

<style>
  .category-filter {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 0.5rem 1rem;
    border: 1px solid var(--gray-800);
    border-radius: 0.375rem;
    background: var(--gray-999);
    color: var(--gray-200);
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }

  .filter-btn:hover {
    background: var(--gray-800);
  }

  .filter-btn.active {
    background: var(--accent-regular);
    color: var(--accent-text-over);
  }
</style>
