---
const { id } = Astro.props;
---

<div class="header-container">
  <header class="header first-header wrapper stack gap-8 lg:gap-20">
    <img
      src="/public/assets/backgrounds/desktop.webp"
      alt=""
      class="desktop hidden lg:block w-full h-auto"
    />
    <img
      src="/public/assets/backgrounds/mobile.webp"
      alt=""
      class="desktop block w-full h-auto object-cover lg:hidden"
    />
  </header>
</div>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    gsap.to(".desktop", {
      scale: 1.5,
      z: 200,
      ease: "power2.inOut",
      scrollTrigger: {
        trigger: ".header",
        start: "top top",
        end: "bottom top",
        scrub: 1,
        markers: true,
        pin: true,
        anticipatePin: 1,
      }
    });
  });
</script>

<style>
  .header-container {
    overflow: hidden;
    position: relative;
  }
  
  .first-header {
    max-width: 100%;
    width: 100%;
    height: auto;
  }
</style>
